# IPv4
for i in $(arp | tail -n +2 | grep -v '(incomplete)' | grep "${LAN}" | awk '{print $1}'); do
	if ping -c 1 -W 1 ${i} > /dev/null 2>&1; then
		ipv4_mac_allowed='true'
		for x in ${IP_IGNORE_MACS}; do
			$(arp | grep $x | awk '{print $3}') | grep "${x}" > /dev/null 2>&1 && ipv4_mac_allowed='false'
		done
		if ${ipv4_mac_allowed}; then
			BREAK='true'
			[ "${REASON}" = '' ] && REASON="IPv4 clients connected: ${i} $(arp | grep "${i}" | awk '{print $3}')"
			break
		fi
	fi
done
