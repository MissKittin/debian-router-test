# Apply sysctl tweaks
if [ ! "${sysctls_tweaks}" = '' ]; then
	print_message 'tweaking sysctl' "${COLOR_INFO}"

	[ ! -e '/usr/local/etc/'"${installer_config_dir}"'sysctl.d' ] && mkdir -p '/usr/local/etc/'"${installer_config_dir}"'sysctl.d'

	# ddos.conf
	echo '# https://javapipe.com/blog/iptables-ddos-protection/' > '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo '' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.core.netdev_max_backlog = 262144' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.core.rmem_default = 31457280' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.core.rmem_max = 67108864' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.core.wmem_default = 31457280' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.core.wmem_max = 67108864' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.core.somaxconn = 65535' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.core.optmem_max = 25165824' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.neigh.default.gc_thresh1 = 4096' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.neigh.default.gc_thresh2 = 8192' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
