	echo '# net.ipv4.tcp_fack = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_ecn = 2' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_fin_timeout = 10' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_keepalive_time = 600' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_keepalive_intvl = 60' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_keepalive_probes = 10' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_no_metrics_save = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo '# net.ipv4.ip_forward = 0' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.conf.all.accept_redirects = 0' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.conf.all.send_redirects = 0' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.conf.all.accept_source_route = 0' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.conf.all.rp_filter = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	ln -s '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf' '/etc/sysctl.d/ddos.conf'

	# disable-watchdog.conf
	echo 'kernel.nmi_watchdog = 0' > '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/disable_watchdog.conf'
	ln -s '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/disable_watchdog.conf' '/etc/sysctl.d/disable_watchdog.conf'

	# hardening.conf
	echo '# https://blog.frehi.be/2019/01/30/linux-security-hardening-recommendations/' > '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo '' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo 'fs.protected_regular = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo 'fs.protected_fifos = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo 'kernel.kptr_restrict = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo 'kernel.kexec_load_disabled = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo 'kernel.yama.ptrace_scope = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo 'kernel.unprivileged_bpf_disabled = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo 'net.core.bpf_jit_harden = 2' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	echo 'net.ipv4.conf.all.log_martians = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	if dpkg --print-architecture | grep '64' > /dev/null 2>&1; then
		echo '# kernel.pid_max = 4194304' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	else
		echo 'kernel.pid_max = 4194304' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	fi
	echo 'fs.protected_regular = 2' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf'
	ln -s '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/hardening.conf' '/etc/sysctl.d/hardening.conf'

