	echo 'net.ipv4.tcp_sack = 0' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/sack_panic_workaround.conf'
	ln -s '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/sack_panic_workaround.conf' '/etc/sysctl.d/sack_panic_workaround.conf'

	# writeback_time.conf
	echo '# Writeback time (60 seconds)' > '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/writeback_time.conf'
	echo 'vm.dirty_writeback_centisecs = 6000' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/writeback_time.conf'
	ln -s '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/writeback_time.conf' '/etc/sysctl.d/writeback_time.conf'
fi
