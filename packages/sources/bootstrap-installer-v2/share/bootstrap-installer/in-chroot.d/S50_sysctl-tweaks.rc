	echo 'net.ipv4.route.max_size = 8048576' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.icmp_echo_ignore_broadcasts = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
