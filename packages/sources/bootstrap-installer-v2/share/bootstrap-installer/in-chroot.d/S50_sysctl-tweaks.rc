	echo 'net.ipv4.tcp_window_scaling = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_rfc1337 = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
