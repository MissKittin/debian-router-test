	echo 'net.ipv4.neigh.default.gc_stale_time = 120' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_max = 10000000' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_loose = 0' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_timeout_established = 1800' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_timeout_close = 10' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_timeout_close_wait = 10' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_timeout_fin_wait = 20' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_timeout_last_ack = 20' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_timeout_syn_recv = 20' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_timeout_syn_sent = 20' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.netfilter.nf_conntrack_tcp_timeout_time_wait = 10' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_slow_start_after_idle = 0' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.ip_local_port_range = 1024 65000' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.ip_no_pmtu_disc = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
