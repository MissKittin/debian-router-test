	echo 'net.ipv4.tcp_congestion_control = htcp' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_mem = 65536 131072 262144' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.udp_mem = 65536 131072 262144' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_rmem = 4096 87380 33554432' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.udp_rmem_min = 16384' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_wmem = 4096 87380 33554432' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.udp_wmem_min = 16384' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_max_tw_buckets = 1440000' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_tw_recycle = 0' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
	echo 'net.ipv4.tcp_tw_reuse = 1' >> '/usr/local/etc/'"${installer_config_dir}"'sysctl.d/ddos.conf'
